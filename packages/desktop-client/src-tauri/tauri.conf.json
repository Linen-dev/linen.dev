{
  "build": {
    "beforeDevCommand": "cross-env BROWSER=none yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:3001",
    "distDir": "../build",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Linen",
    "version": "0.0.20"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "notification": {
        "all": true
      },
      "window": {
        "all": false,
        "close": true,
        "hide": true,
        "show": true,
        "maximize": true,
        "minimize": true,
        "unmaximize": true,
        "unminimize": true,
        "startDragging": true
      },
      "os": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "dev.linen.desktop",
      "targets": ["deb", "appimage", "msi", "app", "dmg", "updater"]
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/Linen-dev/desktop-client/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDMxQzM5MTcwODhCQTk4NkMKUldSc21McUljSkhETWVTc3doWTVtWmNQdmFHN01QdWpJMnN0UnBkZm5yYi92STZ1VHBGYWFiU0UK"
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "",
        "width": 800,
        "height": 600,
        "maximized": true,
        "titleBarStyle": "Overlay"
      }
    ]
  }
}
